# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 1
}

order += "disk /"
order += "load"
order += "memory"
order += "tztime local"


disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used|%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%I:%M:%S"
}
